{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "module": "ESNext",
        "target": "ES2015",
        "moduleResolution": "node",
        "allowJs": true,
        "checkJs": true,
        "noUnusedLocals": false,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": true,
        "declaration": true,
        "sourceMap": true,
        "jsx": "preserve",
        "skipLibCheck": true,
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"
        ],
        "types": [
            "node"
        ]
    }
}
