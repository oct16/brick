{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "dist",
        "module": "commonjs",
        "target": "esnext",
        "moduleResolution": "node",
        "checkJs": true,
        "allowJs": true,
        "noUnusedLocals": false,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "experimentalDecorators": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "removeComments": true,
        "declaration": true,
        "sourceMap": true,
        "jsx": "preserve",
        "skipLibCheck": true,
        "lib": [
            "esnext"
        ],
        "types": [
            "node",
            "jest"
        ]
    },
    "include": [
        "src/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
